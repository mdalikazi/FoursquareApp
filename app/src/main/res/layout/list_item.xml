<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="3dp"
    app:contentPadding="@dimen/card_view_content_padding"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/venue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cafe 1"
            style="@style/TextAppearance.AppCompat.Menu"/>

        <TextView
            android:id="@+id/venue_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venue_title"
            android:text="123"
            style="@style/TextAppearance.AppCompat.Caption"/>

        <TextView
            android:id="@+id/venue_distance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venue_title"
            android:layout_toRightOf="@+id/venue_distance"
            android:text=" km away"
            style="@style/TextAppearance.AppCompat.Caption"/>

        <TextView
            android:id="@+id/venue_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/venue_distance"
            android:text="123 Abc St, XYZ 1234"
            style="@style/TextAppearance.AppCompat.Body1"/>

        <TextView
            android:id="@+id/venue_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venue_address"
            android:text="(02) 1234 5678"
            style="@style/TextAppearance.AppCompat.Body1"/>

        <Button
            android:id="@+id/btn_get_directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"

            android:text="Get Directions"
            style="@style/TextAppearance.AppCompat.Button"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>