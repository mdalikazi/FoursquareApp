<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/venue_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:id="@+id/venue_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/card_view_content_padding">

        <TextView
            android:id="@+id/venue_title"
            style="@style/TextAppearance.AppCompat.Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cafe 1"/>

        <TextView
            android:id="@+id/venue_distance"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venue_title"
            android:text="123"/>

        <TextView
            android:id="@+id/venue_distance_text"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venue_title"
            android:layout_toRightOf="@+id/venue_distance"
            android:text=" km away"/>

        <TextView
            android:id="@+id/venue_address"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venue_distance"
            android:layout_marginTop="10dp"
            android:text="123 Abc St, XYZ 1234"/>

        <TextView
            android:id="@+id/venue_phone"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venue_address"
            android:text="(02) 1234 5678"/>

        <!--<ImageView
            android:id="@+id/venue_map"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/venue_phone"
            android:src="@mipmap/ic_launcher"
            android:clickable="false"
            android:visibility="gone"/>-->

        <!--<Button
            android:id="@+id/btn_get_directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Get Directions"
            android:textSize="10dp"
            android:padding="0dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/venue_details">

        <fragment
            android:id="@+id/venue_map"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:name="com.google.android.gms.maps.MapFragment" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
